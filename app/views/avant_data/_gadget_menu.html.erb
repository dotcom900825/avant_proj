<div ng-show="checkCurrentPath('circle_packing')">
  <div class='row'>
    <div class='col-xs-2'>
      <label>Hierarchy</label>
    </div>
    <div class='col-xs-10'>
      <select ng-model="hierOne" ng-change="queryData()" ng-options="column for column in columns" style="width: 200px">
      </select>
      <select ng-model="hierTwo" ng-change="queryData()" ng-options="column for column in columns" style="width: 200px">
      </select>
    </div>
  </div>

  <div class='row' style="margin-top: 20px;">
    <div class='col-xs-2'>
      <label>Selected:</label>
    </div>

    <div class='col-xs-10'>
      <div class='col-xs-6'>
        {{ hierOne}} : {{ name }}
      </div>
    </div>

  </div>
</div>

<div ng-show="checkCurrentPath('pie')">
  <div class='row'>
    <div class='col-xs-2'>
      <select id="column" ng-model="pieChartColumn" ng-options="name for name in columns" ng-change="redrawPieChart(pieChartColumn)"></select>
    </div>
  </div>
</div>