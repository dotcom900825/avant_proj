<div ng-show="checkCurrentPath('circle_packing')">
  <div class='row'>
    <div class='col-xs-2'>
      <label>Hierarchy</label>
    </div>
    <div class='col-xs-10'>
      <select ng-model="hierOne" ng-change="queryData()" ng-options="column for column in columns" style="width: 200px">
      </select>
      <select ng-model="hierTwo" ng-change="queryData()" ng-options="column for column in columns" style="width: 200px">
      </select>
    </div>
  </div>

  <div class='row' style="margin-top: 20px;">
    <div class='col-xs-2'>
      <label>Selected:</label>
    </div>

    <div class='col-xs-10'>
      <div class='col-xs-6'>
        {{ hierOne}} : {{ name }}
      </div>
    </div>

  </div>
</div>

<div ng-show="checkCurrentPath('parallel_coordinate')">
  <div class='row'>
    <div class='col-xs-12'>
      <ul style="padding-left: 5px" >
        <li style="display: inline-block; margin-left: 15px" ng-repeat="column in selectedColumns">
          {{ column.field }} [<a href ng-click="removeColumn($index)">X</a>]
        </li>
      </ul>

      <label>Add new data column: </label>
      <select ng-model="parallelColumns" ng-change="addColumnsParallel(parallelColumns)" ng-options="column for column in difference(columns, selectedColumns)">
      </select>
    </div>
  </div>
</div>

<div ng-show="checkCurrentPath('pie')">
  <div class='row'>
    <div class='col-xs-2'>
      <select id="column" ng-model="pieChartColumn" ng-options="name for name in columns" ng-change="redrawPieChart(pieChartColumn)"></select>
    </div>
  </div>
</div>

<div ng-show="checkCurrentPath('scatter_plot')">
  <div class='row'>
    <div class='col-xs-12'>
      <label>X Axis: </label>
      <select id="column" ng-model="scatterPlotX" ng-options="name for name in columns"></select>
      <br>

      <label>Y Axis: </label>
      <select id="column" ng-model="scatterPlotY" ng-options="name for name in columns"></select>
      <br>

      <label>Shape size: </label>
      <select id="column" ng-model="scatterPlotSize" ng-options="name for name in columns"></select>
    </div>
    <button ng-click="scatterPlotChart()" class='btn btn-primary'>Redraw</button>
  </div>
</div>