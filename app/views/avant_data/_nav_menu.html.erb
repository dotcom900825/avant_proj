<div class='row'>
  <div class='col-xs-12'>
    <div class='col-xs-2' style="position: relative" ng-repeat="visual in visualPath" ng-click="showVisualizationComponent(visual)">
      <%= image_tag "{{visual}}.png", :width=>100%>
      <i style="  font-size: 20px;
  position: absolute;
  top: 30px;
  right: 15px;" class="fa fa-long-arrow-right"></i>
      <div ng-show="pathData[visual]['filter']" style="font-size: 12px">
        {{pathData[visual]['filter']}} : {{pathData[visual]['value']}}
      </div>
    </div>

    <div class="dropdown yamm-fw col-xs-3 col-xs-offset-1" style="margin-top: 20px">
      <a href="#" data-toggle="dropdown" class="dropdown-toggle btn btn-default">
        Select next visualization
      </a>
      <ul class="dropdown-menu" style="width: 400px; padding: 20px 40px; z-index: 2000;">
        <li>
          <div class="yamm-content">
            <div class="row">
            <div class='row'>
              <div class="col-xs-6">
                <a ng-click="switchVisualization('parallel_coordinate')" href="#" class="thumbnail">
                  <%= image_tag "parallel_coordinate.png"%>
                  Parallel Coordinate
                </a>
              </div>

              <div class="col-xs-6">
                <a ng-click="switchVisualization('scatter_plot')" href="#" class="thumbnail">
                  <%= image_tag "scatter_plot.png"%>
                  Scatterplot Matrix
                </a>
              </div>
            </div>

            <div class="col-xs-6 col-sm-6">
              <a ng-click="switchVisualization('pie')" href="#" class="thumbnail">
                <%= image_tag "pie.png"%>
                Pie Chart
              </a>
            </div>

            <div class="col-xs-6 col-sm-6">
              <a ng-click="switchVisualization('motion_chart')" href="#" class="thumbnail">
                <%= image_tag "motion_chart.png"%>
                Motion Chart
              </a>
            </div>

            </div>
          </div>
        </li>
      </ul>
    </div>

    <div class='col-xs-2 col-xs-offset-1'>
      <div class='form-group'>
        <label>Path Name</label>
        <input type="text" ng-model="pathName"></input>
      </div>
      <a href="#" class="btn btn-primary" ng-click="saveCurrentPath()">Save Current Path</a>
    </div>
  
  </div>
</div>

<div class='row'>
  <div class='col-xs-4'>
    Filters: {{ pathData }}
    <hr>
    Current visualiation: {{currentPath}}
    <hr>
    {{ filters }}
  </div>
</div>