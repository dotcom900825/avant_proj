[
  {
    "key": "Heroin Usage",
    "values": [
      <% @heroin_data.each_with_index do |data, index| %>
        {
          "series": 0,
          "shape": "circle",
          "size": <%= data.age %>,
          "x": <%= data.number_of_sexual_partners%>,
          "y": <%= data.education_in_years%>
        }<%= "," if index + 1 < @heroin_data.size%>
      <% end %>
    ]
  },
  {
    "key": "Meth Usage",
    "values": [
      <% @meth_data.each_with_index do |data, index| %>
        {
          "series": 0,
          "shape": "square",
          "size": <%= data.age %>,
          "x": <%= data.number_of_sexual_partners%>,
          "y": <%= data.education_in_years%>
        }<%= "," if index + 1 < @meth_data.size%>
      <% end %>
    ]
  },
  {
    "key": "Alcohol_data",
    "values": [
      <% @alcohol_data.each_with_index do |data, index| %>
        {
          "series": 0,
          "shape": "diamond",
